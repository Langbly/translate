{
  "name": "langbly-translate-action",
  "version": "1.0.0",
  "description": "GitHub Action to translate locale files using the Langbly API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "bundle": "ncc build src/main.ts -o dist --source-map --license licenses.txt",
    "all": "npm run build && npm run bundle",
    "test": "vitest run"
  },
  "keywords": [
    "github-action",
    "translation",
    "i18n",
    "localization",
    "langbly"
  ],
  "author": "Langbly <hello@langbly.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@actions/glob": "^0.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vercel/ncc": "^0.38.1",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  }
}
